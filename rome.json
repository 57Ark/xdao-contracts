{
  "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5"
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,

    "rules": {
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off"
      },
      "nursery": {
        "useExhaustiveDependencies": "warn"
      }
    }
  },
  "files": {
    "ignore": [
      "node_modules",
      "typechain-types",
      ".openzeppelin",
      "artifacts",
      "audits",
      "coverage"
    ]
  }
}
